<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <material name="purple">
        <color rgba="0.4 0.0 0.5 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 0.5 1.0"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    
    <!-- BASE LINK -->

    <link name="base_link"></link>

    <!-- ChASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0.0 0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0.0 0.05"/>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
            <material name="purple"/>
        </visual>
        <collision>
            <origin xyz="0.1 0.0 0.05"/>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.2" y="0.2" z="0.1">
            <origin xyz="0.1 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>    
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Purple</material>
    </gazebo>

    <!-- FRONT LEFT WHEEL LINK -->

    <joint name="fl_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="fl_wheel"/>
        <origin xyz="0.175 0.1 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="fl_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.025">
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>  
    </link>

    <gazebo reference="fl_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- FRONT RIGHT WHEEL LINK -->

    <joint name="fr_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="fr_wheel"/>
        <origin xyz="0.175 -0.1 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="fr_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.025">
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>  
    </link>

    <gazebo reference="fr_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- BACK LEFT WHEEL LINK -->

    <joint name="bl_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="bl_wheel"/>
        <origin xyz="0.025 0.1 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="bl_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.025">
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>  
    </link>

    <gazebo reference="bl_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- BACK RIGHT WHEEL LINK -->

    <joint name="br_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="br_wheel"/>
        <origin xyz="0.025 -0.1 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="br_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collsion>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collsion>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.025">
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>  
    </link>

    <gazebo reference="br_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>